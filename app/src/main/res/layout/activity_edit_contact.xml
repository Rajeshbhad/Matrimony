<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    tools:context=".EditContact">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/edit_mail_card_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edit_mail_card_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#050505"
                android:text="EMAIL" />
            <ImageView
                android:id="@+id/edit_mail_card_imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="250dp"
                android:layout_gravity="center_horizontal|end"
                app:srcCompat="@drawable/ic_menu_edit_profile"/>
        </LinearLayout>
        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <LinearLayout
            android:id="@+id/phone_number_card_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone_number_card_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#050505"
                android:text="PHONE NUMBER" />
            <ImageView
                android:id="@+id/phone_number_card_imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="165dp"
                android:layout_gravity="center_horizontal|end"
                app:srcCompat="@drawable/ic_menu_edit_profile"/>
        </LinearLayout>
        <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <LinearLayout
            android:id="@+id/alternate_phone_card_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alternate_phone_card_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#050505"
                android:text="ALTERNATE PHONE NUMBER" />
            <ImageView
                android:id="@+id/alternate_phone_card_imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="65dp"
                android:layout_gravity="center_horizontal|end"
                app:srcCompat="@drawable/ic_menu_edit_profile"/>
        </LinearLayout>
        <TextView
            android:id="@+id/alternateContactNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <LinearLayout
            android:id="@+id/contact_preferences_card_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contact_preferences_card_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#050505"
                android:text="CONTACT PREFERENCES" />
            <ImageView
                android:id="@+id/contact_preferences_card_imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="95dp"
                android:layout_gravity="center_horizontal|end"
                app:srcCompat="@drawable/ic_menu_edit_profile"/>
        </LinearLayout>
        <TextView
            android:id="@+id/whom_to_contact_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Whom To Contact"/>
        <TextView
            android:id="@+id/whomToContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Not Specified"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <TextView
            android:id="@+id/contact_person_name_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Contact Person Name"/>
        <TextView
            android:id="@+id/contactPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Not Specified"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <TextView
            android:id="@+id/available_time_to_call_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Available Time To Call"/>
        <TextView
            android:id="@+id/availableTimeToCall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Not Specified"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <TextView
            android:id="@+id/comments_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Comments"/>
        <TextView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Not Specified"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#7A7979" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#7A7979" />

    </LinearLayout>

</ScrollView>