<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAlternateNumber">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternate Contact Details"
            android:textColor="#4E4C4C"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/editReligion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="Please Enter new number"
            android:textSize="17sp"
            android:inputType="textCapSentences"
            android:layout_margin="2dp" />
        <Button
            android:id="@+id/EditAlternateNumberSaveBtn"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape6"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="SAVE" />
    </LinearLayout>

</ScrollView>