<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="80dp">

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="#DD1616"
        android:textSize="35sp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textStyle="bold|italic"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/edUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/tvUsername"
            android:background="@drawable/shape7"
            android:autofillHints="Username"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/edPassword"
            android:background="@drawable/shape7"
            android:inputType="textPassword"
            android:autofillHints="Password" />
    </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btnLoginWithOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF0808"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="@string/btnLoginWithOtp" />

        <TextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF0808"
            android:padding="10dp"
            android:layout_marginStart="80dp"
            android:textSize="14sp"
            android:text="Forgot Password?" />
        </LinearLayout>
        <Button
            android:id="@+id/btnLLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Register"
            android:hint="@string/login"
            android:text="@string/btnLogin"
            android:background="@drawable/shap4"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Register"
            android:hint="@string/login"
            android:text="@string/btnRegister"
            android:background="@drawable/shap4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textColor="@color/white" />
      </LinearLayout>
</ScrollView>