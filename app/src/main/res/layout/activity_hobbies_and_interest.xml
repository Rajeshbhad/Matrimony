<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HobbiesAndInterest">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/HobbiesAndInterest_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOBBIES AND INTERESTS"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/txtProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="HOBBIES"/>
            <TextView
                android:id="@+id/editHobbies"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="INTERESTS"/>
            <TextView
                android:id="@+id/editInterests"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="FAVORITE MUSIC"/>
            <TextView
                android:id="@+id/editFavouriteMusic"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="FAVORITE READS"/>
            <TextView
                android:id="@+id/editFavouriteReads"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="PREFERRED MOVIES"/>
            <TextView
                android:id="@+id/editPreferredMovies"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="SPORTS / FITNESS ACTIVITIES"/>
            <TextView
                android:id="@+id/editSportsAndFitnessActivities"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="FAVORITE CUISINE"/>
            <TextView
                android:id="@+id/editFavouriteCuisine"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="PREFERRED DRESS STYLE"/>
            <TextView
                android:id="@+id/editPreferredDressStyle"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:text="SPOKEN LANGUAGES"/>
            <TextView
                android:id="@+id/editSpokenLanguages"
                android:background="@drawable/shape7"
                android:drawableEnd="@drawable/ic_drop_down_arrow"
                android:text="--Select--"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/hobbiesAndInterestSaveBtn"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape6"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="SAVE" />
    </LinearLayout>
</ScrollView>